<?xml version="1.0" encoding="UTF-8"?>
<!-- tiles_main.xml -->
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
       
<tiles-definitions>
	<definition name="baseLayout" template="/WEB-INF/views/common/layout.jsp">
		<put-attribute name="title"  value="Spring Web Application"/>   
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp"/>   
		<put-attribute name="body"   value=""/>
		<put-attribute name="side"   value="/WEB-INF/views/common/side.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp"/>
	</definition>
	
	
    <!-- 로그인페이지 -->
    <definition name="member/login" extends="baseLayout">
        <put-attribute name="title" value="로그인페이지"/>
        <put-attribute name="body" value="/WEB-INF/views/member/login.jsp"/> 
    </definition>

    <!-- 회원가입페이지 -->
    <definition name="member/addMemberFrm" extends="baseLayout">
        <put-attribute name="title" value="회원가입페이지"/>
        <put-attribute name="body" value="/WEB-INF/views/member/addMemberFrm.jsp"/> 
    </definition>
    
    <!-- 회원가입 성공 페이지 -->
    <definition name="member/addSuccess" extends="baseLayout">
        <put-attribute name="title" value="회원가입 성공 페이지"/>
        <put-attribute name="body" value="/WEB-INF/views/member/addSuccess.jsp"/> 
    </definition>
	
	<!-- 내 정보 수정 페이지 -->
    <definition name="member/updateMemberFrm" extends="baseLayout">
        <put-attribute name="title" value="내 정보 수정 페이지"/>
        <put-attribute name="body" value="/WEB-INF/views/member/updateMemberFrm.jsp"/> 
    </definition>
	
	<!-- 회원 목록 페이지 -->
    <definition name="member/memberListFrm" extends="baseLayout">
        <put-attribute name="title" value="회원 목록 페이지"/>
        <put-attribute name="body" value="/WEB-INF/views/member/memberListFrm.jsp"/> 
    </definition>
    
    <!-- id찾기  페이지 -->
    <definition name="/member/findIdFrm" extends="baseLayout">
        <put-attribute name="title" value="아이디 찾기 페이지"/>
        <put-attribute name="body" value="/WEB-INF/views/member/findIdFrm.jsp"/> 
    </definition>
	
	    <!-- id찾기 결과  페이지 -->
    <definition name="/member/findId" extends="baseLayout">
        <put-attribute name="title" value="아이디  찾기 결과 페이지"/>
        <put-attribute name="body" value="/WEB-INF/views/member/findId.jsp"/> 
    </definition>
	
	<!-- PW찾기 페이지 -->
    <definition name="/member/findPasswdFrm" extends="baseLayout">
        <put-attribute name="title" value="비밀번호 찾기 페이지"/>
        <put-attribute name="body" value="/WEB-INF/views/member/findPasswdFrm.jsp"/> 
    </definition>
	
	<!-- PW찾기 결과 페이지 -->
    <definition name="/member/findPasswd" extends="baseLayout">
        <put-attribute name="title" value="비밀번호 찾기 결과 페이지"/>
        <put-attribute name="body" value="/WEB-INF/views/member/findPasswd.jsp"/> 
    </definition>
	
</tiles-definitions>   








  